<templateSet group="Ballerina">

    <template name="fun" value="function $NAME$ ($ARGS$) {&#10;    $END$&#10;}"
              description="Function template" toReformat="false"
              toShortenFQNames="false">
        <variable name="NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="ARGS" expression="" defaultValue="" alwaysStopAt="true"/>
        <context>
            <option name="BALLERINA_FILE" value="true"/>
        </context>
    </template>

    <template name="main" value="function main (string[] args) {&#10;    $END$&#10;}"
              description="Function Template" toReformat="false"
              toShortenFQNames="false">
        <context>
            <option name="BALLERINA_FILE" value="true"/>
        </context>
    </template>

    <template name="con" value="connector $NAME$ ($ARGS$) {&#10;    $END$&#10;}"
